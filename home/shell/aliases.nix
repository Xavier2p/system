{
  config,
  lib,
  ...
}: let
  cfg = config.forgeOS.shell.aliases;
  ls = "eza";
  editor = "nvim";
in {
  options.forgeOS.shell.aliases = {
    enable = lib.mkEnableOption true;
  };

  config = lib.mkIf cfg.enable {
    programs.zsh.shellAliases = lib.mkMerge [
      {
        mk = "${editor} Makefile";

        dk = "docker";
        dkc = "docker compose";
        k = "kubectl";
        kn = "kubectl config set-context minikube --namespace";
        tf = "terraform";
        ai = "ansible-inventory";
        ap = "ansible-playbook";
        nb = "netbird";
        make = "make -Bj";
        v = "${editor}";

        # Oneliners
        pskill = "ps aux | sk | awk '{print $2}' | xargs -r kill";

        ":q" = "exit";
      }
    ];
  };
}
